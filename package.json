{
  "name": "adhx",
  "version": "1.26.0",
  "description": "Save now. Read never. Find always. A Twitter/X bookmark manager for people who bookmark everything and read nothing.",
  "type": "module",
  "scripts": {
    "dev": "next dev -p 3001",
    "build": "next build",
    "start": "next start",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "db:migrate": "tsx src/lib/db/migrate.ts",
    "db:reset": "tsx src/lib/db/reset.ts",
    "db:seed": "tsx src/lib/db/seed.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix"
    ]
  },
  "keywords": [
    "twitter",
    "x",
    "bookmarks",
    "archive",
    "markdown",
    "nextjs"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@sentry/node": "^10.33.0",
    "better-sqlite3": "^11.10.0",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.19",
    "drizzle-orm": "^0.45.1",
    "hls.js": "^1.6.15",
    "jose": "^6.1.3",
    "lucide-react": "^0.468.0",
    "next": "^16.1.5",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^2.2.0",
    "twitter-api-v2": "^1.17.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.0.0",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^2.1.9",
    "autoprefixer": "^10.4.0",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.2",
    "eslint-config-next": "^16.1.1",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "lint-staged": "^16.2.7",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0",
    "tsx": "^4.0.0",
    "typescript": "^5.3.0",
    "vitest": "^2.1.0"
  },
  "engines": {
    "node": ">=20"
  }
}
